<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/white">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/_170sdp"
           android:background="@drawable/curve_background"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/_16sdp"
               android:textColor="@color/white"
               android:text="Noida,India"
               android:drawableLeft="@drawable/location_white_icon"
               android:drawablePadding="@dimen/_5sdp"
               android:textSize="@dimen/_16ssp"
               />
           
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_15sdp"
               android:layout_marginLeft="@dimen/_15sdp"
               android:layout_marginRight="@dimen/_15sdp"
               app:cardCornerRadius="@dimen/_3sdp"
               app:cardElevation="@dimen/_10sdp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/white"
                   android:padding="@dimen/_5sdp">

                   <EditText
                       android:id="@+id/searchValue"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="#00FFFFFF"
                       android:layout_toLeftOf="@+id/searchBtn"
                       android:drawableLeft="@drawable/baseline_location_on_24"
                       android:layout_centerVertical="true"
                       android:layout_alignParentLeft="true"
                       android:hint=" Find a near place for staying"
                       android:textColorHint="@color/gray1"
                       android:textColor="@color/black"
                       android:textSize="@dimen/_11ssp"
                       android:maxLines="1"/>
                   
                   <ImageView
                       android:id="@+id/searchBtn"
                       android:layout_width="@dimen/_22sdp"
                       android:layout_height="@dimen/_22sdp"
                       android:layout_alignParentRight="true"
                       android:src="@drawable/search_icon" />
               </RelativeLayout>
           </androidx.cardview.widget.CardView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Find"
               android:textColor="@color/white"
               android:textSize="@dimen/_14ssp"
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_marginLeft="@dimen/_15sdp"/>

       </LinearLayout>

       <HorizontalScrollView
           android:id="@+id/find_section"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_130sdp"
           android:padding="@dimen/_10sdp">
           
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">
               
               <androidx.cardview.widget.CardView
                   android:id="@+id/FindFlat"
                   android:layout_width="@dimen/_56sdp"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:elevation="@dimen/_8sdp">
                   
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:orientation="vertical"
                       android:padding="@dimen/_4sdp">
                       
                       <ImageView
                           android:layout_width="@dimen/_24sdp"
                           android:layout_height="@dimen/_24sdp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/flat" />
                       
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:textSize="@dimen/_8ssp"
                           android:textColor="@color/gray1"
                           android:text="Flat"
                           />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>


               <androidx.cardview.widget.CardView
                   android:id="@+id/FindApartment"
                   android:layout_width="@dimen/_56sdp"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:elevation="@dimen/_8sdp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:orientation="vertical"
                       android:padding="@dimen/_4sdp">

                       <ImageView
                           android:layout_width="@dimen/_24sdp"
                           android:layout_height="@dimen/_24sdp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/apartment" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:textSize="@dimen/_8ssp"
                           android:textColor="@color/gray1"
                           android:text="Apartment"
                           />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/findPrivateRoom"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_width="@dimen/_56sdp"
                   android:layout_height="@dimen/_50sdp"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:elevation="@dimen/_8sdp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:orientation="vertical"
                       android:padding="@dimen/_4sdp">

                       <ImageView
                           android:layout_width="@dimen/_24sdp"
                           android:layout_height="@dimen/_24sdp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/private_room" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:textSize="@dimen/_8ssp"
                           android:textColor="@color/gray1"
                           android:text="Private Room"
                           />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/findSharedRoom"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_width="@dimen/_56sdp"
                   android:layout_height="@dimen/_50sdp"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:elevation="@dimen/_8sdp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:orientation="vertical"
                       android:padding="@dimen/_4sdp">

                       <ImageView
                           android:layout_width="26dp"
                           android:layout_height="24dp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/shared_room" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:textSize="@dimen/_8ssp"
                           android:textColor="@color/gray1"
                           android:text="Shared Room"
                           />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/findHouse"
                   android:layout_width="@dimen/_56sdp"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:elevation="@dimen/_8sdp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:orientation="vertical"
                       android:padding="@dimen/_4sdp">

                       <ImageView
                           android:layout_width="@dimen/_24sdp"
                           android:layout_height="@dimen/_24sdp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/house" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:textSize="@dimen/_8ssp"
                           android:textColor="@color/gray1"
                           android:text="House"
                           />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/findVilla"
                   android:layout_width="@dimen/_56sdp"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:elevation="@dimen/_8sdp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:orientation="vertical"
                       android:padding="@dimen/_4sdp">

                       <ImageView
                           android:layout_width="@dimen/_24sdp"
                           android:layout_height="@dimen/_24sdp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/villa" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:textSize="@dimen/_8ssp"
                           android:textColor="@color/gray1"
                           android:text="Villa"
                           />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/findKothi"
                   android:layout_width="@dimen/_56sdp"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:elevation="@dimen/_8sdp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:orientation="vertical"
                       android:padding="@dimen/_4sdp">

                       <ImageView
                           android:layout_width="@dimen/_24sdp"
                           android:layout_height="@dimen/_24sdp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/villa" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:textSize="@dimen/_8ssp"
                           android:textColor="@color/gray1"
                           android:text="Kothi"
                           />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/findPG"
                   android:layout_width="@dimen/_56sdp"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:elevation="@dimen/_8sdp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:orientation="vertical"
                       android:padding="@dimen/_4sdp">

                       <ImageView
                           android:layout_width="@dimen/_24sdp"
                           android:layout_height="@dimen/_24sdp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/flat" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:textSize="@dimen/_8ssp"
                           android:textColor="@color/gray1"
                           android:text="PG"
                           />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/findCoLiving"
                   android:layout_width="@dimen/_56sdp"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:elevation="@dimen/_8sdp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:orientation="vertical"
                       android:padding="@dimen/_4sdp">

                       <ImageView
                           android:layout_width="@dimen/_24sdp"
                           android:layout_height="@dimen/_24sdp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/apartment" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:textSize="@dimen/_8ssp"
                           android:textColor="@color/gray1"
                           android:text="Co-Living"
                           />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>


           </LinearLayout>

       </HorizontalScrollView>

       <TextView
           android:id="@+id/text1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/find_section"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_marginLeft="@dimen/_10sdp"
           android:layout_alignParentLeft="true"
           android:textSize="@dimen/_13ssp"
           android:textColor="@color/black"
           android:text="Recommendations"/>


       <TextView
           android:id="@+id/allRecommendations"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/find_section"
           android:layout_alignBottom="@id/text1"
           android:gravity="bottom"
           android:layout_marginRight="@dimen/_10sdp"
           android:layout_alignParentRight="true"
           android:textSize="@dimen/_11ssp"
           android:textColor="@color/colorPrimaryDark"
           android:text="See all"/>
    
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recommendationRV"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/text1"
           android:padding="@dimen/_10sdp"
           android:orientation="horizontal"
           />

       <TextView
           android:id="@+id/text2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/recommendationRV"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_marginLeft="@dimen/_10sdp"
           android:layout_alignParentLeft="true"
           android:textColor="@color/black"
           android:textSize="@dimen/_13ssp"
           android:text="Recently added"/>


       <TextView
           android:id="@+id/allRecentlyAdded"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/recommendationRV"
           android:layout_alignBottom="@id/text2"
           android:gravity="bottom"
           android:layout_marginRight="@dimen/_10sdp"
           android:layout_alignParentRight="true"
           android:textColor="@color/colorPrimaryDark"
           android:textSize="@dimen/_11ssp"
           android:text="See all"/>

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recentlyAddedRV"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@id/text2"
           android:padding="@dimen/_5sdp" />

   </RelativeLayout>

</ScrollView>